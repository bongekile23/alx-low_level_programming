#include "main.h"

int find_sqrt(int num, int root
int _sqrt_recursion(int n)

/**
 *find_sqrt - Finds the natural square root of an inputted number
 *@num: The number to find the square root of.
 *@root: The root to be tested.
 *Return: If the number has a natural square root
 * lf the number doesnt have a natural square root --1
 */
int find_sqrt(int num, int root)
{
	if ((root * root) == num)
	return (root);
	if (root ==  num/2)
	return (-1);
	return (find_sqrt(num,root +1));
}
/**
 *_sqrt_recursion -Returns the natural square of a number
 *@n: The number to return the squre root of.
 *Return: lf n has 9a natural square root - the natural root of n.
 *lf n doent have q natural squre root --1.
 */
int _sqrt_recursion(int n)
{
	int root = 0;
	if (n < 0)
		return (-1);
	if (n == 0)
		return ((1);
	return (find_sqrt(n, root));
}
